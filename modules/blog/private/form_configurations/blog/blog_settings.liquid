---
name: blog_settings
async_callback_actions:
  delay:
  content:
resource: Customization
configuration:
  properties:
    title:
      validation:
        presence: true
    subtitle:
      validation:
        presence: false
    slug:
      validation:
        presence: true
    scope:
      validation:
        presence: true
    enabled:
      validation:
        presence: false
    sidebar_enabled:
      validation:
        presence: false
    grid_view_enabled:
      validation:
        presence: false
    tags_filter:
      validation:
        presence: false
    facebook_app_id:
      validation:
        presence: false
    facebook_link:
      validation:
        presence: false
    twitter_link:
      validation:
        presence: false
    instagram_link:
      validation:
        presence: false
    linkedin_link:
      validation:
        presence: false
    google_plus_link:
      validation:
        presence: false
    facebook_link:
      validation:
        presence: false
  custom_images:
    header_image:
      image:
        validation: {
          file_content_type: { allow: ['image/jpeg', 'image/png', 'image/gif'] }
        }
default_payload: ''
flash_notice: Settings saved
return_to: /dashboard/blog/settings
---
{%- include 'modules/utils/public/views/partials/utils' -%}
{%- assign tags_filter = f.properties.tags_filter.value | join: ", " %}

{% form form, multipart: true, as: customization, html-novalidate: false, html-data-expert-signup-form:true, html-class: 'pt-5 with-borders' %}
  {%- include flash_messages -%}

  {%- include hidden_field with f.properties.scope, value: scope, -%}
  {%- include hidden_field with f.properties.slug, value: "blog", -%}
  {%- include input with f.properties.title, type: "text" -%}

  <span class="switch switch">
    {%- include checkbox_field with f.properties.enabled, input_class: "switch normal" -%}
    {%- include label_tag with f.properties.enabled -%}
  </span>

  {% comment %}
  {%- include input with f.properties.sidebar_enabled, type: "checkbox" -%}
  {%- include input with f.properties.grid_view_enabled, type: "checkbox" -%}
  {% endcomment %}
  {%- include input with f.properties.tags_filter, type: "text", value: tags_filter -%}
  {%- include input with f.properties.facebook_app_id, type: "text" -%}
  {%- include input with f.custom_images.header_image.image, type: "image" -%}
  {%- include input with f.properties.facebook_link, type: "text" -%}
  {%- include input with f.properties.twitter_link, type: "text" -%}
  {%- include input with f.properties.linkedin_link, type: "text" -%}
  {%- include input with f.properties.instagram_link, type: "text" -%}
  {%- include input with f.properties.google_plus_link, type: "text" -%}

  {% include submit_tag with "Save", class: 'btn btn-primary btn-lg', disable_with: 'Saving...' %}
{% endform %}
